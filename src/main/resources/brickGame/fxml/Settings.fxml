<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="700.0" prefWidth="500.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="brickGame.SettingsController">
   <children>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" text="Back" />
      <Label layoutX="217.0" layoutY="72.0" text="Settings" />
      <Label layoutX="34.0" layoutY="162.0" text="Initial heart number:" />
      <Label layoutX="36.0" layoutY="230.0" text="End level" />
      <Label layoutX="34.0" layoutY="315.0" text="Background music" />
      <CheckBox layoutX="181.0" layoutY="324.0" mnemonicParsing="false" text="ON " textFill="WHITE" />
      <Label layoutX="35.0" layoutY="364.0" text="Background music volume" />
      <Slider layoutX="231.0" layoutY="374.0" value="50.0" />
      <HBox alignment="CENTER" layoutX="181.0" layoutY="162.0" prefHeight="35.0" prefWidth="100.0">
         <children>
            <Button fx:id="addHeart" mnemonicParsing="false" onAction="#decrementHeart" text="-" />
            <Label fx:id="initialHeartLabel" alignment="TOP_LEFT" text="3" />
            <Button fx:id="minusHeart" mnemonicParsing="false" onAction="#incrementHeart" text="+" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="131.0" layoutY="230.0" prefHeight="35.0" prefWidth="100.0">
         <children>
            <Button fx:id="minusLevel" mnemonicParsing="false" onAction="#decrementLevel" text="-" />
            <Label fx:id="endLevelLabel" alignment="TOP_LEFT" text="18" />
            <Button fx:id="addLevel" mnemonicParsing="false" onAction="#incrementLevel" text="+" />
         </children>
      </HBox>
   </children>
</AnchorPane>
