<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="500.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="brickGame.MenuController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="150.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../brickbreaker.jpeg" />
         </image>
      </ImageView>
      <Label layoutX="215.0" layoutY="136.0" text="Menu" />
      <Pane layoutX="191.0" layoutY="192.0" prefHeight="200.0" prefWidth="100.0">
         <children>
            <VBox layoutX="11.0" layoutY="45.0" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="startButton" alignment="CENTER" mnemonicParsing="false" onAction="#onStartOrResume" text="Start Game" />
                  <Button fx:id="tutorialButton" alignment="CENTER" mnemonicParsing="false" onAction="#onOpenTutorial" text="Tutorial" />
                  <Button fx:id="exitButton" alignment="CENTER" mnemonicParsing="false" onAction="#exit" prefHeight="19.0" prefWidth="40.0" text="Quit" />
               </children></VBox>

         </children>
      </Pane>
   </children>
</AnchorPane>
